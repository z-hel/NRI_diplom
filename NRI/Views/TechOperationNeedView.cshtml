    <script>
        var selectedCheckbox;
        var selectedForDelete = [];
        var resultForDelete = new Map();

        function EditTechOperationNeed() {
            

            var indexTOSelected = document.getElementById("selectTechOperationEdit").options.selectedIndex;
            var techOperationIdPUT = document.getElementById("selectTechOperationEdit").options[indexTOSelected].value;

            var indexNomOutSelected = document.getElementById("selectNomOutEdit").options.selectedIndex;
            var nomNeedIdPUT = document.getElementById("selectNomOutEdit").options[indexNomOutSelected].value;

            var countPUT = document.getElementById("countEdit").value;
            if (countPUT.match(/^[-\+]?\d+/) === null) { alert('Укажите корректное числовое значение параметра "Количество"'); }

            var idPUT = selectedCheckbox;

            var urlstr = "api/TechOperationNeed/" + idPUT;
            $.ajax({
                url: urlstr,
                contentType: "application/json",
                method: "PUT",
                data: JSON.stringify({
                    techOperationId: techOperationIdPUT,
                    nomenclatureNeedId: nomNeedIdPUT,
                    count: countPUT,
                    id: idPUT
                }),
                success: async function (techOperationNeed) {
                    reset('techOperationNeedEditForm');
                    alert('Запись успешно изменена');
                    //update table

                    var table = document.getElementById('techOperationNeedTable');
                    
                    for (var i = 1; i < table.rows.length;) {
                            table.deleteRow(i);
                    }
                    await GetTechOperationNeeds();
                    CloseModal();
                },
                error: function (e) {
                    console.log(e.message);
                }
            })
        }

        function openEditModal() {
            
            $('input[type=checkbox]').each(async function () {
                //if ($(this).is(':checked')) {
                if (this.checked) {
                    selectedCheckbox = this.value;
                    var editModal = document.getElementById('editModal');

                    somebodyShow(editModal);
                    //TODO SHOW EDIT MODAL


                    //editButton.setAttribute('data-modal', 'editModal');
                    //showForEdit(editModal);
                    //modalShow(editModal);
                    //$("#editModal").show();
                    var id = selectedCheckbox;
                    await GetTechOperationNeedById(id);
                    
                    return false;
                }
            });
            if (selectedCheckbox == null) {
                alert('Не выбрана ни одна запись');
            }
            return false;
        }
        
        // сброс формы
        function reset(formId) {
            var form = document.forms[formId];
            form.reset();
            form.elements["id"].value = 0;
        }


        function CloseModal() {
            var closer = document.getElementById('closer');
            closer.click();
        }


        function openDeleteModal() {
            selectedForDelete = [];

            $('input[type=checkbox]').each(function () {
                if (this.checked) {
                    selectedForDelete.push(this.value)
                }
            });


            if (selectedForDelete.length == 0) {
                alert('Не выбрана ни одна запись');
                return false;
            }
            

            var deleteModal = document.getElementById('deleteModal');
            //TODO SHOW DELETE MODAL
            somebodyShow(deleteModal);

            return false;
        }

