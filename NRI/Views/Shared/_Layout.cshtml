@inject NRI.Services.IModelService ModelService
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NRI</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/main.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
</head>


<body class="is-preload">

    <!-- Wrapper -->
    <div id="wrapper">



        <!-- Sidebar -->
        <div id="sidebar">
            <div class="inner">

                <!-- Search -->
                @*<section id="search" class="alt">
                        <form method="post" action="#">
                            <input type="text" name="query" id="query" placeholder="Search" />
                        </form>
                    </section>*@

                <!-- Menu -->
                <nav id="menu">
                    <header class="major">
                        <h2>Меню</h2>
                    </header>
                    <ul>
                        <li id="TechOperationOut"><a asp-page="/TechOperationOutView" onclick="renderTitle()">Выходы</a></li>
                        <li id="Schedule" class="pageName"><a asp-page="/ScheduleView">Графики</a></li>
                        <li id="Tool" class="pageName"><a asp-page="/ToolView">Инструменты</a></li>
                        <li id="Setup" class="pageName"><a asp-page="/SetupView">Наладки</a></li>
                        <li id="Nomenclature" class="pageName"><a asp-page="/NomenclatureView">Номенклатура</a></li>
                        <li id="Equipment" class="pageName"><a asp-page="/EquipmentView">Оборудование</a></li>
                        <li id="Personal" class="pageName"><a asp-page="/PersonalView">Персонал</a></li>
                        <li id="TechOperationNeed" class="pageName"><a asp-page="/TechOperationNeedView">Потребности</a></li>
                        <li id="ProductionUnit" class="pageName"><a asp-page="/ProductionUnitView">Производственные подразделения</a></li>
                        <li id="Mode" class="pageName"><a asp-page="/ModeView">Режимы</a></li>
                        <li id="Resource" class="pageName"><a asp-page="/ResourceView">Ресурсы</a></li>
                        <li id="TechOperation" class="pageName"><a asp-page="/TechOperationView">Технологические операции</a></li>
                        <li id="TechProcess" class="pageName"><a asp-page="/TechProcessView">Технологические процессы</a></li>
                        <li id="Pattern" class="pageName"><a asp-page="/PatternView">Шаблоны</a></li>
                        @*<li>
                                <span class="opener">Submenu</span>
                                <ul>
                                    <li><a href="#">Lorem Dolor</a></li>
                                    <li><a href="#">Ipsum Adipiscing</a></li>
                                    <li><a href="#">Tempus Magna</a></li>
                                    <li><a href="#">Feugiat Veroeros</a></li>
                                </ul>
                            </li>*@
                    </ul>
                </nav>
                <!-- Footer -->
                <footer id="footer">
                    <p class="copyright">&copy; z_hel</p>
                </footer>
            </div>
        </div>

        <div class="content">
            <header class="major">
                <h2 id="headerTitle">Веб-подсистема управления нормативно-справочной информацией</h2>
            </header>

            @{
                @RenderBody()
                //Layout = "Index";
            }
        </div>

    </div>






    <partial name="_CookieConsentPartial" />
    <div class="container body-content">
        @*@RenderBody()*@
    </div>

    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.3.1.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-tsQFqpEReu7ZLhBV2VZlAu7zcOV+rXbYlF2cqB8txI/8aZajjp4Bqd+V6D5IgvKT">
        </script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                crossorigin="anonymous"
                integrity="sha384-aJ21OjlMXNL5UyIl/XNwTMqvzeRMZH2w8c5cRVpzpU8Y5bApTppSuUkhZXN0VxHd">
        </script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>

    <!-- Scripts -->
    
    <script src="js/jquery.min.js"></script>
    <script src="js/browser.min.js"></script>
    <script src="js/breakpoints.min.js"></script>
    <script src="js/util.js"></script>
    <script src="js/main.js"></script>

    <script>
        function renderTitle() {
            var header = document.getElementById('headerTitle');
            var elem;
            $('ul > li').click(function () {
                var clicked = $(this).text();
                var result;
                switch (clicked) {
                    case "TechOperationOut":
                        elem = document.getElementById('TechOperationOut');
                        elem.setAttribute('background-color', '#337ab726');
                        elem.setAttribute('border-left', '6px solid #337ab7');
                        elem.setAttribute('padding', '5px 10px');
                    //result = "Выходы";
                    //background - color: #337ab726;
                    //border - left: 6px solid #337ab7;
                    //padding: 5px 10px;
                    case "TechOperationNeed":
                        result = "Потребности";
                    case "TechOperation":
                        result = "Технологические операции";

                }
                header.innerText = 'Веб-подсистема управления нормативно-справочной информацией > ' + result;
            });
        }

        $(".content").scroll(function () {

            $("#sidebar .toggle").click();

        });

    </script>

    @RenderSection("Scripts", required: false)

</body>


