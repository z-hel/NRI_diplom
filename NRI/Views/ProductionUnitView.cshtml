    <script>
        var selectedCheckbox;
        var selectedForDelete = [];
        var resultForDelete = new Map();
        

        function EditProductionUnit() {
            
            var productionUnitNamePUT = document.getElementById("productionUnitEdit").value;
            
            var indexParentProductionUnitSelected = document.getElementById("selectParentProductionUnitEdit").options.selectedIndex;
            var parentProductionUnitIdPUT = document.getElementById("selectParentProductionUnitEdit").options[indexParentProductionUnitSelected].value;
            if (parentProductionUnitIdPUT == 0) {
                parentProductionUnitIdPUT = null;
            }

            var idPUT = selectedCheckbox;

            var urlstr = "api/ProductionUnit/" + idPUT;
            $.ajax({
                url: urlstr,
                contentType: "application/json",
                method: "PUT",
                data: JSON.stringify({
                    name: productionUnitNamePUT,
                    parentProductionUnitId: parentProductionUnitIdPUT,
                    id: idPUT
                }),
                success: async function (productionUnit) {
                    reset('productionUnitEditForm');
                    alert('Запись успешно изменена');
                    //update table

                    var table = document.getElementById('productionUnitTable');

                    for (var i = 1; i < table.rows.length;) {
                        table.deleteRow(i);
                    }
                    await GetProductionUnits();
                    CloseModal();
                    await GetParentProductionUnit();
                },
                error: function (e) {
                    console.log(e.message);
                }
            })
            
        }

        function openEditModal() {

            $('input[type=checkbox]').each(async function () {
                //if ($(this).is(':checked')) {
                if (this.checked) {
                    selectedCheckbox = this.value;
                    var editModal = document.getElementById('editModal');

                    somebodyShow(editModal);
