        async function GetProductionUnitById(id) {
            var urlstr = "api/ProductionUnit/" + id;
            await $.ajax({
                url: urlstr,
                type: 'GET',
                contentType: "application/json",
                success: async function (productionUnit) {
                    var previousTO = document.getElementById('productionUnitEdit');
                    previousTO.value = productionUnit.name;

                    var previousParentProductionUnit = document.getElementById('selectParentProductionUnitEdit');
                    previousParentProductionUnit.value = productionUnit.parentProductionUnitId;
                    

                    resultForDelete.set('productionUnitName', productionUnit.name);
                    resultForDelete.set('parentProductionUnitId', productionUnit.parentProductionUnitId);
                },
                error: function (e) {
                    console.log(e.message);
                }
            });
        }

        function GetParentProductionUnit() {
            var select = document.getElementById('selectParentProductionUnit');
            var selectEdit = document.getElementById('selectParentProductionUnitEdit');

            var optsSelect = select.options;
            while (optsSelect.length > 0) {
                optsSelect[optsSelect.length - 1] = null;
            }

            var optsSelectEdit = selectEdit.options;
            while (optsSelectEdit.length > 0) {
                optsSelectEdit[optsSelectEdit.length - 1] = null;
            }

            var ooptionNull = document.createElement('option');
            ooptionNull.value = 0;
            ooptionNull.innerText = '-';
            var ooptionNullEdit = document.createElement('option');
            ooptionNullEdit.value = 0;
            ooptionNullEdit.innerText = '-';

            select.appendChild(ooptionNull);
            selectEdit.appendChild(ooptionNullEdit);


            $.ajax({
                url: '/api/ProductionUnit',
                type: 'GET',
                contentType: "application/json",
                success: function (productionUnits) {
                    $.each(productionUnits, function (index, productionUnit) {
                        var ooption = document.createElement('option');
                        ooption.value = productionUnit.id;
                        ooption.innerText = productionUnit.name
                        select.appendChild(ooption);
                        
                        var ooptionEdit = document.createElement('option');
                        ooptionEdit.value = productionUnit.id;
                        ooptionEdit.innerText = productionUnit.name
                        selectEdit.appendChild(ooptionEdit);
                    })
                },
                error: function (e) {
                    console.log(e.message);
                }
            });
        }
        

        async function AddProductionUnit() {
            var productionUnitName = document.getElementById("productionUnit").value;
            
            var indexParentProductionUnitSelected = document.getElementById("selectParentProductionUnit").options.selectedIndex;
            var parentProductionUnitId = document.getElementById("selectParentProductionUnit").options[indexParentProductionUnitSelected].value;
            if (parentProductionUnitId == 0) {
                parentProductionUnitId = null;
            }
            

            $.ajax({
                url: "api/ProductionUnit",
                contentType: "application/json",
                method: "POST",
                data: JSON.stringify({
                    name: productionUnitName,
                    parentProductionUnitId: parentProductionUnitId
                }),
                success: async function (productionUnit) {
                    reset('productionUnitForm');
                    alert('Запись успешно добавлена');
                    await GetParentProductionUnit();
                    addRow('productionUnitTable', productionUnit);
                },
                error: function (e) {
                    console.log(e.message);
                }
            })
        }


        // Получение всех ProductionUnit
        function GetProductionUnits() {
            $.ajax({
                url: '/api/ProductionUnit',
                type: 'GET',
                contentType: "application/json",
                success: function (productionUnits) {

                    $.each(productionUnits, function (index, productionUnit) {
                        var transactionList = productionUnit;

                        addRow("productionUnitTable", transactionList);
                    })
                },
                error: function (e) {
                    console.log(e.message);
                }
            });
        }

        async function GetParentProductionUnitName(id) {
            var name;
            var urlstr = '/api/ProductionUnit/' + id;
            await $.ajax({
                url: urlstr,
                type: 'GET',
                contentType: "application/json",
                success: function (productionUnit) {
                    name = productionUnit.name;
                },
                error: function (e) {
                    console.log(e.message);
                }
            });
            return name;
        }
        
