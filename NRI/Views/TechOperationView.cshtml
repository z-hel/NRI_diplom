        async function GetTechOperationById(id) {
            var urlstr = "api/TechOperation/" + id;
            await $.ajax({
                url: urlstr,
                type: 'GET',
                contentType: "application/json",
                success: async function (techOperation) {
                    var previousTO = document.getElementById('TechOperationEdit');
                    previousTO.value = techOperation.name;

                    var previousTechProcess = document.getElementById('selectTechProcessEdit');
                    previousTechProcess.value = techOperation.techProcessId;

                    var previousSerialNumber = document.getElementById('serialNumberEdit');
                    previousSerialNumber.value = techOperation.serialNumber;

                    resultForDelete.set('techOperationName', techOperation.name);
                    resultForDelete.set('techProcessId', techOperation.TechProcessId);
                    resultForDelete.set('serialNumber', techOperation.serialNumber);
                },
                error: function (e) {
                    console.log(e.message);
                }
            });
        }

        function GetTechProcesses() {
            var select = document.getElementById('selectTechProcess');
            var selectEdit = document.getElementById('selectTechProcessEdit');
            var selectTK = document.getElementById('selectTKTechProcess');
            $.ajax({
                url: '/api/TechProcess',
                type: 'GET',
                contentType: "application/json",
                success: function (techProcesses) {
                    $.each(techProcesses, function (index, techProcess) {
                        var ooption = document.createElement('option');
                        ooption.value = techProcess.id;
                        ooption.innerText = techProcess.name
                        select.appendChild(ooption);

                        var ooptionTK = document.createElement('option');
                        ooptionTK.value = techProcess.id;
                        ooptionTK.innerText = techProcess.name
                        selectTK.appendChild(ooptionTK);

                        var ooptionEdit = document.createElement('option');
                        ooptionEdit.value = techProcess.id;
                        ooptionEdit.innerText = techProcess.name
                        selectEdit.appendChild(ooptionEdit);
                    })
                },
                error: function (e) {
                    console.log(e.message);
                }
            });
        }



        function AddTechOperation() {
            var techOperationName = document.getElementById("techOperation").value;

            var indexTechProcessSelected = document.getElementById("selectTechProcess").options.selectedIndex;
            var techProcessId = document.getElementById("selectTechProcess").options[indexTechProcessSelected].value;

            var serialNumber = document.getElementById("serialNumber").value;
            if (serialNumber.match(/^[-\+]?\d+/) === null) { alert('Укажите корректное числовое значение параметра "Порядковый номер"'); }


            $.ajax({
                url: "api/TechOperation",
                contentType: "application/json",
                method: "POST",
                data: JSON.stringify({
                    name: techOperationName,
                    techProcessId: techProcessId,
                    serialNumber: serialNumber
                }),
                success: async function (techOperation) {
                    reset('techOperationForm');
                    alert('Запись успешно добавлена');
                    addRow('techOperationTable', techOperation);
                    await GetTechProcesses();
                }
            })
        }


        // Получение всех techOperation
        function GetTechOperations() {
            var i = 0;
            $.ajax({
                url: '/api/TechOperation',
                type: 'GET',
                contentType: "application/json",
                success: function (techOperations) {

                    $.each(techOperations, function (index, techOperation) {
                        i = i + 1;

                        //var TOIndex = 'techOperationName' + techOperation.id;
                        //var TPIndex = 'techProcessId' + techOperation.id;

                        resultTOForTK.set(techOperation.id, techOperation.name);
                        resultTPForTK.set(techOperation.id, techOperation.techProcessId);
                        resultNumTOForTK.set(techOperation.id, techOperation.serialNumber);

                        var transactionList = techOperation;

                        addRow("techOperationTable", transactionList);
                    })
                },
                error: function (e) {
                    console.log(e.message);
                    if (e.status == 500) {
                        alert('Нет соединения с базой данных');
                    }
                }
            })
        }

        async function GetTechProcessName(id) {
            var name;
            var urlstr = '/api/TechProcess/' + id;
            await $.ajax({
                url: urlstr,
                type: 'GET',
                contentType: "application/json",
                success: function (techProcess) {
                    name = techProcess.name;
                },
                error: function (e) {
                    console.log(e.message);
                }
            });
            return name;
        }

