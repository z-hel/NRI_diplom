    <script>


        var selectedCheckbox;
        var selectedForDelete = [];
        var TKOperations = [];
        var resultForDelete = new Map();
        var resultTOForTK = new Map();
        var resultTPForTK = new Map();
        var resultNumTOForTK = new Map();


        function downloadTK() {
            showTK();

            var indexTechProcessSelected = document.getElementById("selectTKTechProcess").options.selectedIndex;
            var techProcess = document.getElementById("selectTKTechProcess").options[indexTechProcessSelected].text;

            var doc = new jsPDF()


            doc.setFont('16761')

            doc.text("Технологический процесс: ", 20, 20);
            doc.text(techProcess, 20, 30);

            var x = 40;

            doc.text("Номер | Технологическая операция", 40, x);

            for (var i = 0; i < TKOperations.length; i++) {
                x = x + 10;
                doc.text(TKOperations[i], 40, x);
            }


            doc.save('techMap.pdf')
        }

        async function showTK() {

            var indexTechProcessSelected = document.getElementById("selectTKTechProcess").options.selectedIndex;
            var techProcessId = document.getElementById("selectTKTechProcess").options[indexTechProcessSelected].value;

            var f = document.getElementById('listOperationsTK');
            f.innerHTML = '<label for="listOperationsTK" class="tk" id="tk">Номер | Технологическая операция</label>';

            $("label.tkLabel").remove();
            TKOperations = [];

            resultTPForTK.forEach(function (keyTP, valueTP) {
                var techProcessIdTK = resultTPForTK.get(valueTP);

                resultTOForTK.forEach(function (keyTO, valueTO) {
                    var techOperationName = keyTO;


                    if (valueTP == valueTO && techProcessId == techProcessIdTK) {
                        TKOperations.push(resultNumTOForTK.get(valueTO) + "     " + techOperationName);
                    }
                });

            });

            for (var i = 0; i < TKOperations.length; i++) {
                var elem = TKOperations[i];
                var sp = document.createElement("span");
                sp.innerHTML = '<label for="listOperationsTK" class="tkLabel" id="' + i + '">' + elem + '</label>';
                sp.id = i;
                f.appendChild(sp);
            }
        }

        function EditTechOperation() {

            var techOperationNamePUT = document.getElementById("TechOperationEdit").value;

            var indexTechProcessSelected = document.getElementById("selectTechProcessEdit").options.selectedIndex;
            var techProcessIdPUT = document.getElementById("selectTechProcessEdit").options[indexTechProcessSelected].value;

            var serialNumberPUT = document.getElementById("serialNumberEdit").value;
            if (serialNumberPUT.match(/^[-\+]?\d+/) === null) { alert('Укажите корректное числовое значение параметра "Порядковый номер"'); }

            var idPUT = selectedCheckbox;

            var urlstr = "api/TechOperation/" + idPUT;
            $.ajax({
                url: urlstr,
                contentType: "application/json",
                method: "PUT",
                data: JSON.stringify({
                    name: techOperationNamePUT,
                    techProcessId: techProcessIdPUT,
                    serialNumber: serialNumberPUT,
                    id: idPUT
                }),
                success: async function (techOperation) {
                    reset('techOperationEditForm');
                    alert('Запись успешно изменена');
                    //update table

                    var table = document.getElementById('techOperationTable');

                    for (var i = 1; i < table.rows.length;) {
                        table.deleteRow(i);
                    }
                    await GetTechOperations();
                    await GetTechProcesses();
                    CloseModal();
                },
                error: function (e) {
                    console.log(e.message);
                }
            })
        }

        function openTKModal() {
            var tkModal = document.getElementById('TKModal');
            document.getElementById('listOperationsTK').innerHTML = '';
            somebodyShow(tkModal);
        }

        function openEditModal() {

            $('input[type=checkbox]').each(async function () {
                //if ($(this).is(':checked')) {
                if (this.checked) {
                    selectedCheckbox = this.value;
