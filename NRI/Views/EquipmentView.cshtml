        async function GetEquipmentById(id) {
            var urlstr = "api/Equipment/" + id;
            await $.ajax({
                url: urlstr,
                type: 'GET',
                contentType: "application/json",
                success: async function (equipment) {
                    var name = document.getElementById('nameEdit');
                    var code = document.getElementById('codeEdit');
                    name.value = equipment.name;
                    code.value = equipment.code;

                    resultForDelete.set('name', equipment.name);
                    resultForDelete.set('code', equipment.code);
                },
                error: function (e) {
                    console.log(e.message);
                }
            });
        }

        function AddEquipment() {
            var name = document.getElementById("name").value;
            var code = document.getElementById("code").value;

            $.ajax({
                url: "api/Equipment",
                contentType: "application/json",
                method: "POST",
                data: JSON.stringify({
                    code: code,
                    name: name
                }),
                success: function (equipment) {
                    reset('equipmentForm');
                    alert('Запись успешно добавлена');
                    addRow('equipmentTable', equipment);
                }
            })
        }


        // Получение всех equipment
        function GetEquipments() {
            $.ajax({
                url: '/api/Equipment',
                type: 'GET',
                contentType: "application/json",
                success: function (equipments) {

                    $.each(equipments, function (index, equipment) {
                        if (equipment.name != "-") {
                            var transactionList = equipment;

                            addRow("equipmentTable", transactionList);
                        }
                    })
                },
                error: function (e) {
                    console.log(e.message);
                    if (e.status == 500) {
                        alert('Нет соединения с базой данных');
                    }
                }
            });
