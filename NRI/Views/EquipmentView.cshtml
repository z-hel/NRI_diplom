    <script>

        var formData;

        function prepareFile(inputId) {
            var input = document.getElementById(inputId);
            var files = input.files;
            formData = new FormData();

            for (var i = 0; i != files.length; i++) {
                formData.append("files", files[i]);
            }

            var importButton = document.getElementById("import");
            importButton.style = "visibility:visible;";
        }


        function importXlsx() {
            var _url = '@Url.Action("Import", "Equipment")';

            $.ajax(
                {
                    url: _url,
                    data: formData,
                    processData: false,
                    contentType: false,
                    type: "POST",
                    success: async function (equipment) {
                        //console.log(techProcess);

                        var table = document.getElementById('equipmentTable');

                        for (var i = 1; i < table.rows.length;) {
                            table.deleteRow(i);
                        }
                        await GetEquipments();
                        alert('Запись успешно добавлена');
                        var importButton = document.getElementById("import");
                        importButton.style = "visibility:hidden;";
                    },
                    error: function (e) {
                        console.log(e.message);
                    }
                });

        }
    </script>


