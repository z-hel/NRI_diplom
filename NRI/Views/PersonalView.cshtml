        var selectedCheckbox;
        var selectedForDelete = [];
        var resultForDelete = new Map();

        function EditPersonal() {
            var namePUT = document.getElementById("nameEdit").value;
            var qualificationPUT = document.getElementById("qualificationEdit").value;
            var changePUT = document.getElementById("changeEdit").value;
            if (changePUT.match(/^[-\+]?\d+/) === null) { alert('Укажите корректное числовое значение параметра "Смена"'); }

            var idPUT = selectedCheckbox;

            var urlstr = "api/Personal/" + idPUT;
            $.ajax({
                url: urlstr,
                contentType: "application/json",
                method: "PUT",
                data: JSON.stringify({
                    name: namePUT,
                    qualification: qualificationPUT,
                    change: changePUT,
                    id: idPUT
                }),
                success: async function (personal) {
                    reset('personalEditForm');
                    alert('Запись успешно изменена');
                    //update table

                    var table = document.getElementById('personalTable');

                    for (var i = 1; i < table.rows.length;) {
                        table.deleteRow(i);
                    }
                    await GetPersonals();
                    CloseModal();
                },
                error: function (e) {
                    console.log(e.message);
                }
            })
        }

        function openEditModal() {

            $('input[type=checkbox]').each(async function () {
                //if ($(this).is(':checked')) {
                if (this.checked) {
                    selectedCheckbox = this.value;
                    var editModal = document.getElementById('editModal');

                    somebodyShow(editModal);
