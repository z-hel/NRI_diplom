        async function GetPersonalById(id) {
            var urlstr = "api/Personal/" + id;
            await $.ajax({
                url: urlstr,
                type: 'GET',
                contentType: "application/json",
                success: async function (personal) {
                    var name = document.getElementById('nameEdit');
                    name.value = personal.name;

                    var previousqualification = document.getElementById('qualificationEdit');
                    previousqualification.value = personal.qualification;

                    var previouschange = document.getElementById('changeEdit');
                    previouschange.value = personal.change;

                    resultForDelete.set('name', personal.name);
                    resultForDelete.set('qualification', personal.qualification);
                    resultForDelete.set('change', personal.change);
                },
                error: function (e) {
                    console.log(e.message);
                }
            });
        }

        function AddPersonal() {
            var name = document.getElementById("name").value;
            var qualification = document.getElementById("qualification").value;
            var change = document.getElementById("change").value;
            if (change.match(/^[-\+]?\d+/) === null) { alert('Укажите корректное числовое значение параметра "Смена"'); }


            $.ajax({
                url: "api/Personal",
                contentType: "application/json",
                method: "POST",
                data: JSON.stringify({
                    name: name,
                    qualification: qualification,
                    change: change
                }),
                success: function (personal) {
                    reset('personalForm');
                    alert('Запись успешно добавлена');
                    addRow('personalTable', personal);
                }
            })
        }


        // Получение всех personal
        function GetPersonals() {
            $.ajax({
                url: '/api/Personal',
                type: 'GET',
                contentType: "application/json",
                success: function (personals) {

                    $.each(personals, function (index, personal) {
                        if (personal.name != "-") {
                            var transactionList = personal;

                            addRow("personalTable", transactionList);
                        }
                    })
                },
                error: function (e) {
                    console.log(e.message);
                    if (e.status == 500) {
                        alert('Нет соединения с базой данных');
                    }
                }
            });
        }

