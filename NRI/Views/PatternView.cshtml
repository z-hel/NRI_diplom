        async function GetPatternById(id) {
            var urlstr = "api/Pattern/" + id;
            await $.ajax({
                url: urlstr,
                type: 'GET',
                contentType: "application/json",
                success: async function (pattern) {
                    var name = document.getElementById('nameEdit');
                    name.value = pattern.name;

                    var previousdateTimeStart = document.getElementById('dateTimeStartEdit');
                    previousdateTimeStart.value = pattern.dateTimeStart;

                    var previousdateTimeEnd = document.getElementById('dateTimeEndEdit');
                    previousdateTimeEnd.value = pattern.dateTimeEnd;

                    var previousworkHour = document.getElementById('workHourEdit');
                    previousworkHour.value = pattern.workHour;

                    resultForDelete.set('name', pattern.name);
                    resultForDelete.set('workHour', pattern.workHour);
                    resultForDelete.set('dateTimeStart', pattern.dateTimeStart);
                    resultForDelete.set('dateTimeEnd', pattern.dateTimeEnd);
                },
                error: function (e) {
                    console.log(e.message);
                }
            });
        }

        function AddPattern() {
            var name = document.getElementById("name").value;
            var workHour = document.getElementById("workHour").value;
            var dateTimeStart = document.getElementById("dateTimeStart").value;
            var dateTimeEnd = document.getElementById("dateTimeEnd").value;

            if (workHour.match(/^[-\+]?\d+/) === null) { alert('Укажите корректное числовое значение параметра "Время работы"'); }

            $.ajax({
                url: "api/Pattern",
                contentType: "application/json",
                method: "POST",
                data: JSON.stringify({
                    name: name,
                    workHour: workHour,
                    dateTimeStart: dateTimeStart,
                    dateTimeEnd: dateTimeEnd
                }),
                success: function (pattern) {
                    reset('patternForm');
                    alert('Запись успешно добавлена');
                    addRow('patternTable', pattern);
                }
            })
        }


        // Получение всех pattern
        function GetPatterns() {
            $.ajax({
                url: '/api/Pattern',
                type: 'GET',
                contentType: "application/json",
                success: function (patterns) {

                    $.each(patterns, function (index, pattern) {
                        var transactionList = pattern;

                        addRow("patternTable", transactionList);
                    })
                },
                error: function (e) {
                    console.log(e.message);
                }
            });
        }

