        var selectedCheckbox;
        var selectedForDelete = [];
        var resultForDelete = new Map();

        function EditPattern() {
            var namePUT = document.getElementById("nameEdit").value;
            var workHourPUT = document.getElementById("workHourEdit").value;
            var dateTimeStartPUT = document.getElementById("dateTimeStartEdit").value;
            var dateTimeEndPUT = document.getElementById("dateTimeEndEdit").value;

            if (workHourPUT.match(/^[-\+]?\d+/) === null) { alert('Укажите корректное числовое значение параметра "Время работы"'); }

            var idPUT = selectedCheckbox;

            var urlstr = "api/Pattern/" + idPUT;
            $.ajax({
                url: urlstr,
                contentType: "application/json",
                method: "PUT",
                data: JSON.stringify({
                    name: namePUT,
                    dateTimeStart: dateTimeStartPUT,
                    dateTimeEnd: dateTimeEndPUT,
                    workHour: workHourPUT,
                    id: idPUT
                }),
                success: async function (pattern) {
                    reset('patternEditForm');
                    alert('Запись успешно изменена');
                    //update table

                    var table = document.getElementById('patternTable');

                    for (var i = 1; i < table.rows.length;) {
                        table.deleteRow(i);
                    }
                    await GetPatterns();
                    CloseModal();
                },
                error: function (e) {
                    console.log(e.message);
                }
            })
        }

        function openEditModal() {

            $('input[type=checkbox]').each(async function () {
                //if ($(this).is(':checked')) {
                if (this.checked) {
                    selectedCheckbox = this.value;
                    var editModal = document.getElementById('editModal');

                    somebodyShow(editModal);
