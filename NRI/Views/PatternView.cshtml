                        name: nameDEL,
                        workHour: workHourDEL,
                        dateTimeStart: dateTimeStartDEL,
                        dateTimeEnd: dateTimeEndDEL,
                        id: idDEL
                    }),
                    success: async function (pattern) {
                        alert('Запись удалена');
                        
                        var table = document.getElementById('patternTable');

                        for (var i = 1; i < table.rows.length;) {
                            table.deleteRow(i);
                        }
                        await GetPatterns();
                        CloseModal();
                    },
                    error: function (e) {
                        console.log(e.message);
                    }
                });
